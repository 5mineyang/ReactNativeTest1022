<resources>

    <!-- **********************************    通用         ****************************************-->
    <!-- 点击默认波纹效果 -->
    <style name="background_default">
        <!--波纹有边界-->
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="background_default_out">
        <!--波纹超出边界-->
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>
    <!-- Base style for Button.-->
    <style name="Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="textAllCaps">false</item><!-- 允许小写-->
    </style>

    <!-- 分割线-->
    <style name="cutting_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="cutting_line_space5" parent="cutting_line">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="dialog_common" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊--><!--模糊-->
    </style>

    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="main_icon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="text_icon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="Switch_IOS">
        <!--track是switch轨迹部分,这里我们用了一个selector来解决不同状态下轨迹的颜色-->
        <item name="android:track">@drawable/bookload1</item>
        <!--thumb是switch滑块,这里我们用了Widget.AppCompat.CompoundButton.Switch下带的资源,如果有需要,请自行更换图标-->
        <item name="android:thumb">@drawable/abc_switch_thumb_material</item>
        <item name="android:background">@null</item>
        <item name="android:textOn">开</item>
        <item name="android:textOff">关</item>
        <!--这个东西才能控制整个开关的宽度, 有些人会发现设置width会无效,设置一下这个就好啦-->
        <item name="android:switchMinWidth">50dp</item>
    </style>

    <!-- **********************************    首页         ****************************************-->
    <style name="app_main_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:text">12sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:drawablePadding">2dp</item>

    </style>

    <style name="app_main_tab_resume" parent="app_main_tab">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="BaseDialogFragment" parent="Theme.AppCompat.Light.Dialog"/>
</resources>
