<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/ivIdentityFront"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/super_ic_identity_front"
            />

        <ImageView
            android:id="@+id/ivIdentityBack"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="-40dp"
            android:src="@drawable/super_ic_identity_back"
            />
    </LinearLayout>


    <Button
        android:id="@+id/btnIdentity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身份证扫描"
        />

    <ImageView
        android:id="@+id/ivFaceRecognition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        />

    <Button
        android:id="@+id/btnFaceRecognition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人脸识别"
        />
</LinearLayout>