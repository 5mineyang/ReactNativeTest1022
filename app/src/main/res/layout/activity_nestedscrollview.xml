<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsvNestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvNestedScrollViewTopView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="top标题"
                android:textColor="@color/white"
                />

            <android.support.design.widget.TabLayout
                android:id="@+id/tlNestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                app:tabIndicatorColor="@color/sendTextColor"
                app:tabIndicatorHeight="2dp"
                app:tabSelectedTextColor="@color/sendTextColor"
                app:tabTextColor="@color/writeColorPress"
                >

            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vpNestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#999999"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >
            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>